div
  nav.navbar.navbar-inverse.navbar-gold.navbar-fixed-top
    .container
      // Brand and toggle get grouped for better mobile display
      .navbar-header
        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='#/profile')
          i.fa.fa-user-circle-o
          | &nbsp; Profile

      // Collect the nav links, forms, and other content for toggling
      #bs-example-navbar-collapse-1.collapse.navbar-collapse
        ul.nav.navbar-nav
          li(ng-repeat="view in navbar.data.left.public"
              class="{{(navbar.$location.path()==view.path.primary || navbar.$location.path() == view.path.alt)? 'active' : ''}}")
            a(ng-href='#{{view.path.primary}}') {{view.displayName}}

          li(ng-show='navbar.loading')
            a(href='')
              i.fa.fa-refresh.fa-lg.text-info(class="{{navbar.loading? 'fa-spin' : ''}}")

        ul.nav.navbar-nav.navbar-right
          li(ng-repeat="view in navbar.data.right.public"
              class="{{(navbar.$location.path()==view.path.primary || navbar.$location.path() == view.path.alt)? 'active' : ''}}")
            a(ng-href='#{{view.path.primary}}') {{view.displayName}}
