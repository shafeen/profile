#signup-modal.modal.fade.bs-example-modal-lg(tabindex='-1', role='dialog')
  .modal-dialog(role='document')
    form.modal-content(ng-submit='navbar.signup()')
      .modal-header
        h3.modal-title.text-center Create New Account
      .modal-body
        .row
          .col-md-offset-2.col-md-8.col-sm-offset-2.col-sm-8.col-xs-offset-1.col-xs-10
            #signup-form
              #signup-errorPanel.panel.panel-danger(ng-show='navbar.showSignupErrorMsg')
                .panel-body.text-danger {{navbar.signupErrorMsg}}
              .form-group(class="{{navbar.emailError? 'has-error' : ''}}")
                label.control-label(for='signup-email') Email address
                input#signup-email.form-control(type='email', required='', ng-model='navbar.signupEmail', placeholder='Email')
              .form-group(class="{{navbar.passwordError? 'has-error' : ''}}")
                label.control-label(for='signup-password') Password
                input#signup-password.form-control(type='password', required='', ng-model='navbar.signupPass', placeholder='Password')
              .form-group(class="{{navbar.passwordError? 'has-error' : ''}}")
                label.control-label(for='signup-password') Confirm Password
                input#signup-password-confirm.form-control(type='password', required='', ng-model='navbar.signupPassConfirm', placeholder='Gotta be the same as above')
      .modal-footer
        button.btn.btn-success(type='submit') Create Account

